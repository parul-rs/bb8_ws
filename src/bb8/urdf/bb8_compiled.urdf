<?xml version="1.0" encoding="utf-8"?>
<robot name="bb8">

  <link name="link_chassis">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
      <mass value="1.0" />
      <inertia ixx="0.16" ixy="0.0" ixz="0.0"
        iyy="0.16" iyz="0.0"
        izz="0.16"/>
    </inertial>
    <collision name="collision_chassis">
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="0 0 .8 1"/>
      </material>  
    </visual>
  </link>
  
  <link name="base_rotation_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0." />
      <mass value="1.0" />
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.004" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
	    <sphere radius="0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>    
    </visual>
  </link>


  <joint name="rotation_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
    <parent link="link_chassis" />
    <child link="base_rotation_link" />
    <axis xyz="0 0 1" />
    <limit effort="18.85" lower="-1e+16" upper="1e+16" velocity="0.3" />
  </joint>

  <link name="base_direction_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0." />
      <mass value="1.0" />
      <inertia ixx="0.049" ixy="0.0" ixz="0.0" iyy="0.049" iyz="0.0" izz="0.049" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0. 0." />
      <geometry>
        <sphere radius="0.35"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0.0 0.00" />
      <geometry>
        <mesh filename="package://bb8/meshes/ball.dae" scale="1 1 1"/>    
      </geometry>   
    </visual>
  </link>

  <joint name="direction_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0.0 0.0 0." />
    <parent link="base_rotation_link" />
    <child link="base_direction_link" />
    <axis xyz="1 0 0" />
    <limit effort="18.85" velocity="27.4" />
  </joint>


  <link name="head_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
      <mass value="0.5" />
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008" />
    </inertial>
    <collision>
      <origin rpy="1.56 0 0" xyz="0 -0.0 -0." />
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 3.14" xyz="0 0.0 -0.35" />
      <geometry>
        <mesh filename="package://bb8/meshes/head.dae" scale="1 1 1"/>
      </geometry>  
    </visual>
  </link>

  <joint name="head_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0.0 0.0 0." />
    <parent link="base_rotation_link" />
    <child link="head_link" />
    <axis xyz="0 0 1" />
    <limit effort="0.10" velocity="0.1" lower="-1e+16" upper="1e+16"/>
  </joint>

  <link name="link_left_wheel">
    <inertial>
        <mass value="0.2"/>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01" /> 
    </inertial>
    <collision name="link_left_wheel_collision">
        <origin rpy="0 1.5707 1.5707" xyz="0.0 0.0 0.0"/>
        <geometry>
          <cylinder length=".001" radius="0.352"/>
        </geometry>
    </collision>
    <visual name="link_left_wheel_visual">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length=".001" radius="0.352"/>
        </geometry>
        <material name="orange">
            <color rgba="0 0 .8 1"/>
        </material>
    </visual>
  </link>

  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.35 0"/>
    <parent link="link_chassis"/>
    <child link="link_left_wheel"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name="link_right_wheel">
    <inertial>
        <mass value="0.2"/>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01" /> 
    </inertial>
    <collision name="link_right_wheel_collision">
        <origin rpy="0 1.5707 1.5707" xyz="0.0 0.0 0.0"/>
        <geometry>
          <cylinder length=".001" radius="0.352"/>
        </geometry>
    </collision>
    <visual name="link_right_wheel_visual">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length=".001" radius="0.352"/>
        </geometry>
        <material name="orange">
            <color rgba="0 0 .8 1"/>
        </material>
    </visual>
  </link>

  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.35 0"/>
    <parent link="link_chassis"/>
    <child link="link_right_wheel"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
  
 <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0. 0 0.6" rpy="0 0 1.57"/>
    <parent link="head_link"/>
    <child link="camera_link"/>
  </joint>
  

  <!-- Base is modeled as a big tub sitting on floor, with two wheels -->
  <gazebo reference="link_chassis">
    <kp>100000000.0</kp>
    <kd>10.0</kd>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>10.0</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>

  <gazebo reference="base_rotation_link">
    <kp>100000000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>

  <gazebo reference="base_direction_link">
    <kp>1000000.0</kp>
    <kd>1000.0</kd>
    <mu1>1000</mu1>
    <mu2>1000</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>0.01</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>

  <gazebo reference="head_support_link">
    <kp>500000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.003</minDepth>
  </gazebo>

  <gazebo reference="head_link">
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.003</minDepth>
  </gazebo>

  <gazebo reference="rotation_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="direction_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="head_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="camera_link">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
  </gazebo>

  <gazebo reference="link_left_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="link_right_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <legacyMode>true</legacyMode>
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <left_joint>joint_left_wheel</left_joint>
      <right_joint>joint_right_wheel</right_joint>
      <wheel_separation>0.35</wheel_separation>
      <wheel_diameter>0.75</wheel_diameter>
      <torque>0.1</torque>
      <command_topic>cmd_vel</command_topic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robot_base_frame>link_chassis</robot_base_frame>
      <!--robot_base_frame>bb_8_dummy_base_direction_link</robot_base_frame-->
    </plugin>
  </gazebo>

  <gazebo>
    <plugin name="bb_8_gazebo_plugin" filename="libgazebo_bb_8_controller.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>30</updateRate>
      <leftJoint>direction_joint</leftJoint>
      <rightJoint>rotation_joint</rightJoint>
      <headJoint>head_joint</headJoint>
      <wheelSeparation>0.5380</wheelSeparation>
      <wheelDiameter>0.186</wheelDiameter>
      <torque>60</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>link_chassis</robotBaseFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishWheelJointState>true</publishWheelJointState>
    </plugin>
  </gazebo>
  
</robot>
